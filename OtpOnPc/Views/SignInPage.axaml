<UserControl x:Class="OtpOnPc.Views.SignInPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:FluentIcons.FluentAvalonia;assembly=FluentIcons.FluentAvalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:viewModel="using:OtpOnPc.ViewModels"
             Width="300"
             MinWidth="300"
             MinHeight="300"
             MaxHeight="420"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="viewModel:SignInPageViewModel"
             mc:Ignorable="d">
    <Grid Margin="16,8" RowDefinitions="*,*,Auto">
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
            <icons:SymbolIcon FontSize="32"
                              FontWeight="Medium"
                              Symbol="LockClosed" />
            <TextBlock FontSize="22"
                       Text="ロックを解除"
                       Theme="{StaticResource SubtitleTextBlockStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Margin="0,16,0,0"
                    VerticalAlignment="Top"
                    Spacing="8">
            <TextBlock Text="パスワード" />
            <TextBox IsEnabled="{Binding !Varifying.Value}" Text="{Binding Password.Value}" />
        </StackPanel>

        <SplitButton Grid.Row="2"
                     Height="40"
                     Margin="0,0,0,12"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Center"
                     Classes="accent"
                     Command="{Binding Unlock}">
            <SplitButton.Flyout>
                <ui:FAMenuFlyout>
                    <ui:RadioMenuFlyoutItem GroupName="CryptoType"
                                            IsChecked="True"
                                            Text="Aes暗号化を使用" />
                    <ui:RadioMenuFlyoutItem GroupName="CryptoType" Text="'Windows.Security.Cryptography'を使用" />
                    <ui:RadioMenuFlyoutItem GroupName="CryptoType" Text="'GNU Privacy Guard'を使用" />

                    <ui:MenuFlyoutSeparator />
                    <ui:MenuFlyoutItem Text="リセットする" />
                </ui:FAMenuFlyout>
            </SplitButton.Flyout>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <icons:SymbolIcon FontSize="16" Symbol="LockOpen" />
                <TextBlock Text="ロック解除" />
            </StackPanel>
        </SplitButton>

    </Grid>
</UserControl>
