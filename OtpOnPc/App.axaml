<Application x:Class="OtpOnPc.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="using:FluentAvalonia.Styling">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/LiteNav.axaml" />
                <ResourceInclude Source="/Styles/SplitButton.axaml" />
                <ResourceInclude Source="/Styles/ToggleSwitch.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <sty:FluentAvaloniaTheme />
        <StyleInclude Source="avares://FluentAvalonia.UI.Windowing/Styles/FAWindowingStyles.axaml" />

        <Style Selector="ToggleSwitch">
            <Setter Property="OnContent" Value="オン" />
            <Setter Property="OffContent" Value="オフ" />
        </Style>
    </Application.Styles>
</Application>
